<!-- root box -->
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="GUI.StartController"
      prefHeight="400.0" prefWidth="600.0"
      fx:id="rot">

    <!-- Logo Image -->
    <ImageView fx:id="logo" >
        <image>
            <Image url="@../Images/Logo2.png"/>
        </image>
    </ImageView>

    <!-- Vertical Padding -->
    <Text text=""></Text>
    <Text text=""></Text>
    <Text text=""></Text>

    <!-- Slogan Text -->
    <Label fx:id="slogan" text="Start Rating Memes Now!"></Label>

    <!-- Vertical Padding -->
    <Text text=""></Text>
    <Text text=""></Text>

    <!-- Start Button -->
    <Button fx:id="startButton" text="Start" minHeight="50" minWidth="150" onAction="#StartButtonHandler"></Button>

    <!-- Vertical Padding -->
    <Text text=""></Text>
    <Text text=""></Text>

    <HBox alignment="CENTER">

        <!-- Log In button -->
        <Button fx:id="logInButton" text="Log In"  minHeight="50" minWidth="250" onAction="#logInHandler" ></Button>

        <!-- Horizontal Padding -->
        <Text text="                "></Text>

        <!-- Create Account Button -->
        <Button fx:id="createAccountButton" text="Create Account"  minHeight="50" minWidth="250" onAction="#createAccountHandler"></Button>

    </HBox>

</VBox>
